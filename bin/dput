import logging
import argparse

import dput.core
from dput.util import load_dput_configs

parser = argparse.ArgumentParser(description='Package upload tool for Debian')

parser.add_argument('-c', '--config', type=str, default=None,
                    help='define a config file to use')

parser.add_argument('-d', '--debug', action='store_true', default=False,
                    help='activate debugging mode, helpful if bugs occur')

parser.add_argument('-D', '--dinstall', action='store_true', default=False,
                    help='do a dry run of dinstall after the upload')

parser.add_argument('-f', '--force', action='store_true', default=False,
                    help='force an upload of an already uploaded package')

args = parser.parse_args()


if args.config:
    dput.core.DPUT_CONFIG_LOCATIONS = [args.config]

if args.debug:
    dput.core.logger.setLevel(logging.DEBUG)
